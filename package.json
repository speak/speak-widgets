{
  "name": "speak-widgets",
  "version": "0.0.2",
  "description": "Speak client UI widgets",
  "scripts": {
    "test": "jest",
    "assets": "cpy src/less/* lib/less/",
    "clean": "rimraf ./lib/*",
    "compile": "node babel src --out-dir lib",
    "build": "npm run clean && npm run compile && npm run assets"
  },
  "main": "lib/index.js",
  "author": {
    "name": "Tom Moor",
    "email": "tom@speak.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/speak/speak-widgets"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/support/preprocessor.js",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules"
    ]
  },
  "peerDependencies": {
    "react": ">=0.12.0"
  },
  "devDependencies": {
    "grunt": "~0.4.5",
    "grunt-babel": "^4.0.0",
    "grunt-contrib-clean": "~0.5.0",
    "grunt-contrib-less": "~0.10.0",
    "load-grunt-config": "^0.19.0",
    "jest-cli": "^0.2.1",
    "react": "^0.13.3",
    "react-tools": "*"
  },
  "dependencies": {
    "jquery": "^2.1.4"
  }
}
